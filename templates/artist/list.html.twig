{% extends "base.html.twig" %}

{% block body %}

    <div class="float-right">
        <a href="{{ path('artist_create') }}" class="btn btn-primary">Ajouter un artiste</a>
    </div>
    <h2>Artistes</h2>

    <div class="row">
        {% for artist in artists %}
            <div class="col-sm-12 col-md-6 col-lg-4 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">{{ artist.artistName }}</h5>
                        <p class="card-text">{{ artist.realName }}</p>
                        <a href="{{ path('album_list', {id:artist.id}) }}" class="btn btn-link">Vois les albums</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
