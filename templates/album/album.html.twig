{% extends "base.html.twig" %}

{% block body %}

    <div class="float-right">
        <a href="{{ path('album_create', {id:artist.id}) }}" class="btn btn-primary">Ajouter un album</a>
    </div>
    <h2>Albums</h2>

    <div class="row">
  
        {% for album in artist.albums %}
            <div class="col-sm-12 col-md-6 col-lg-4 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">{{ album.title }}</h5>
                        <ul class="list-inline">
                                {% for style in album.styles %}
                                    <li class="list-inline-item">{{ style.label }}</li>
                                {% endfor %}
                            </ul>
                        <a href="{{ path('song_list', {id:album.id}) }}" class="btn btn-link">Vois les titres</a>
                        <a href="{{ path('album_update', {id:album.id}) }}" class="btn btn-link">Modifier l'album</a>
                        <a href="{{ path('album_delete', {id:album.id}) }}" class="btn btn-link" onClick="return confirm('Confirmez la suppression!')">Supprimer l'album</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
